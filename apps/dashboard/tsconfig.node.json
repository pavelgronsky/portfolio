/**
 * This file is required for proper compilation and running of ts-node based
 * scripts.
 */
 {
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2020",
        "downlevelIteration": true,
        "lib": [
            "esnext"
        ],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "module": "CommonJS",
        "moduleResolution": "node",
        "noEmit": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "paths": {
            "*": ["src/*"],
        }
    },
    "include": [
      "src",
    ]
}
